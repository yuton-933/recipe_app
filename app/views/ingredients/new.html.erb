<div class="main">
  <div class="card mt-2 w-75 mx-auto">
    <div class="form-group text-center mt-4">
      <h2 class="text-secondary"></h2>
    </div>
    <%# TODO: 名前が一緒の時、空の時にエラー吐くようにする idea：redirectをshowに送る→なければエラー %>
    <div class="form-wrap m-2">
      <%= form_with model: @ingredient, url: dish_ingredients_path, local: true do |f| %>
        <div class="form-group text-center w-75 mx-auto mt-2">
          <%= f.collection_select :food_id, Food.all, :id, :title, :prompt =>"材料を選択" %>
        </div>
        <div class="form-group text-center w-75 mx-auto mt-2">
          <%= f.text_field :unit, required: true, placeholder: "分量 ex) 大さじ１、1/2個" %>
        </div>
        <div class="form-group d-flex justify-content-around mt-2 mx-auto">
          <div class="d-inline-block">
            <%= f.number_field :gram, step: "0.1", required: true, placeholder: "分量（g）" %>
            <%= label_tag(:gram, "g", class:"mr-2") %> 
          </div>
        </div>
        <div class="actions mt-4">
          <%= f.submit "登録", class: "btn btn-primary d-block ms-auto" %>
        </div>
      <% end %>
    </div>
  </div>
</div>